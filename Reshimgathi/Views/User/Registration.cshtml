        <!-- SmartWizard html -->
        <div id="smartwizard">
            <ul>
                <li><a href="#step-1">Step 1 : Personal Details<br /><small>This is step description</small></a></li>
                <li><a href="#step-2">Step 2 : Horoscop Details<br /><small>This is step description</small></a></li>
